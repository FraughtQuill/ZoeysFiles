<?xml version"1.0" encording="utf-8"?>
<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/ file:///usr/share/openbox/menu.xsd">
	<menu
		id="root-menu"
		label="Root Menu"
		icon="ICON"
	>


	<separator label="Root Menu"/>

	<item label="Terminal" icon="ICON">
		<action name="Execute">
			<command>kitty</command>
		</action>
  	</item>

	<item label="Firefox" icon="ICON">
		<action name="Execute">
			<command>firefox</command>
		</action>
  	</item>


	<separator label="Drive Control"/>

	<item label="Sync To Drive" icon="ICON">
		<action name="Execute">
			<command>.config/sync-to-drive.sh</command>
		</action>
  	</item>

	<item label="Sync To Pc" icon="ICON">
		<action name="Execute">
			<command>.config/sync-to-pc.sh</command>
		</action>
  	</item>

	
	<separator label="Power"/>

	<item label="Reboot" icon="ICON">
		<action name="Execute">
			<command>reboot now</command>
		</action>
	</item>

	<item label="Power Off" icon="ICON">
		<action name="Execute">
			<command>shutdown now</command>
		</action>
  	</item>
	
</menu>

</menu>
</openbox_menu>
